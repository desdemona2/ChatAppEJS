<%- include('header'); -%>
    <div class="box" id="heading">
        <h1> <%= title %> </h1>
    </div>

    <div class="box">
            <% items.forEach(item => { %>
                <div class="item">
                    <input type="checkbox">
                    <p> <%= item %> </p>
                </div>
            <% }); %>


            <form class="item" type="submit" action=<%= postPath %> method="post">
            <input type="text" name="item" placeholder="Add Item" autofocus autocomplete="off"/>
            <button type="submit">+</button>
        </form>
    </div>
<%- include('footer'); -%>
